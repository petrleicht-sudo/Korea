rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }
    function isEmailPassword() { return isSignedIn() && request.auth.token.firebase.sign_in_provider == 'password'; }

    // Public data (diary root + budget etc.) under artifacts
    match /artifacts/{appId}/public/data/{collection}/{documentId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;

      // Diary photos subcollection
      match /photos/{photoId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
        allow update, delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
      }
    }

    // Private notes per day (email/password only)
    match /artifacts/{appId}/users/{userId}/itinerary/{dayId}/privateNotes/{noteId} {
      allow read, create, update, delete: if isOwner(userId) && isEmailPassword();
    }
  }
}
